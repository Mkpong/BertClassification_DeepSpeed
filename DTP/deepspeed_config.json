{
  "train_batch_size": 16,
  "gradient_accumulation_steps": 1,
  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    },
    "offload_param": {
      "device": "cpu",
      "pin_memory": true
    }
  },
  "fp16": {
    "enabled": true
  },
  "tensor_parallel": {
    "enabled": true,  # 텐서 병렬화 활성화
    "tp_degree": 2    # 텐서 병렬화 정도 (몇 개의 GPU로 분할할지 설정)
  },
  "zero_allow_untested_optimizer": true,
  "gradient_checkpointing": true
}

